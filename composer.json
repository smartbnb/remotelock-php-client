{
    "name": "smartbnb/remotelock-api",
    "description": "A strongly opinionated API client for RemoteLock (remotelock.com)",
    "type": "library",
    "authors": [
        {
            "name": "Sam Jones",
            "email": "sam.jones@smartbnb.io"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.3",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0",
        "php-http/discovery": "^1.7",
        "php-http/message-factory": "^1.0",
        "psr/http-factory": "^1.0",
        "myclabs/php-enum": "^1.7",
        "php-http/message": "^1.8",
        "php-http/multipart-stream-builder": "^1.1",
        "ext-json": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "mockery/mockery": "^1.3",
        "squizlabs/php_codesniffer": "^3.5",
        "slevomat/coding-standard": "^6.1",
        "php-http/mock-client": "^1.3",
        "nyholm/psr7": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Smartbnb\\RemoteLockApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Smartbnb\\RemoteLockApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --bootstrap vendor/autoload.php"
    }
}
